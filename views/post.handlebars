<div class='menu-container'>
    <div class='card text-white bg-info w-50 mx-auto border-secondary m-3'>
        <div class='card-body'>
            <h5 class='card-title'>{{post.post_title}}</h5>
                <p>Author: {{post.user.username}} Date: {{format_date post.createdAt}}</p>
            <p class='card-text'>{{post.post_content}}</p>
        </div>
    </div>

    {{#each post.comments as |post|}}
    <div class='card text-white bg-secondary w-50 mx-auto border-secondary m-3'>
        <div class='card-body'>
            <h5 class='card-title'>{{user.username}} on {{format_date createdAt}}</h5>
            <p class='card-text'>{{comment_text}}</p>
        </div>
    </div>
    {{/each}}

    <div class='row mx-auto mt-3'>
        <div class='col-md-5 ml-5 mr-5 card mx-auto'>
            <h3>Add New Comment:</h3>
            <form class='form new-comment-form'>
                <div class='form-group'>
                    <label for='comment-text'>Comment:</label>
                    <textarea class='form-input' id='comment-text' name='comment-text'></textarea>
                </div>
                <div class='form-group mx-auto'>
                    <button type='submit' class='btn btn-primary'>Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src='/js/comment.js'></script>